<% layout('/layouts/boilerplate') -%>


<div class="row">
    <h4 class="text-center mt-3">Student List</h4>
    <table class="table text-center mt-3">
        <thread>
            <tr>
                 <th>Roll No</th>
                 <th>First Name</th>
                 <th>Last Name</th>
                 <th>Father Name</th>
                 <th>Adharcard No</th>
                 <th>Mobile No</th>
                 <th>Edit Actions</th>
                 <th>Delete Actions</th>
            </tr>
            <% for(student of students) { %>
             <tr>
                <td><%= student.rollNo  %></td>
                <td><%= student.firstName  %></td>
                <td><%= student.lastName %></td>
                <td><%= student.fathersName %></td>
                <td><%= student.adharcardNo  %></td>
                <td><%= student.phoneNo %></td>
                <td><a href="/students/<%= student._id %>/edit"><button class="btn btn-warning w-75">Edit</button></a></td>
                <td>
<form  class="form-inline" method="post" action="/students/<%= student._id %>?_method=DELETE"><a href="/students/<%= student._id %>"><button class="btn btn-danger w-75">Delete</button></a>
</form>   
             </td>

            </tr>

          <% } %> 
        </thread>
    </table>
</div>