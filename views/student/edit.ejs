<% layout('/layouts/boilerplate') %>


<div class="row offset-3">

    <div class="col-7 ">
        <h1 class="fw-bold">Edit Student</h1>
        <form action="/students/<%= student._id %>?_method=PUT" method="post" novalidate class="needs-validation">
            <div class="mt-3">
                  <label for="rollNo" class="form-label  fw-bold">Roll No</label>
                  <input type="text" id="rollNo" name="rollNo" value="<%= student.rollNo %>" class="form-control" required>
                  <div class="invalid-feedback">
                    Please Fill the Roll No.
                  </div>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
            
            </div>


            <div class="mt-3">

                <label for="firstName" class="form-label fw-bold">First Name</label>
                <input type="text" id="firstName" name="firstName" value="<%= student.firstName %>" class="form-control" required>
                <div class="invalid-feedback">
                    Please Fill the First Name.
                  </div>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>


            <div class="mt-3">
                <label for="lastName" class="form-label fw-bold">Last Name</label>
                <input type="text" id="lastName" name="lastName" value="<%= student.lastName %>" class="form-control" required>
                <div class="invalid-feedback">
                    Please Fill the Last Name.
                  </div>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>


            <div class="mt-3">
                <label for="fatherName" class="form-label fw-bold">Fathers Name</label>
                <input type="text" id="fatherName" name="fathersName" value="<%= student.fathersName %>" class="form-control" required>
                <div class="invalid-feedback">
                    Please Fill the Fathers Name.
                  </div>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>


            <div class="mt-3">
                <label for="adharcardNo class="form-label fw-bold">Adharcard No</label>
                <input type="text" id="adharcardNo" name="adharcardNo" value="<%= student.adharcardNo %>" class="form-control" required>
                <div class="invalid-feedback">
                    Please Fill the Adharcard No.
                  </div>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>


            <div class="mt-3">
                <label for="phoneNo" class="form-label fw-bold">Phone Number</label>
                <input type="text" id="phoneNo" name="phoneNo" value="<%= student.phoneNo %>" class="form-control" required>
                <div class="invalid-feedback">
                    Please Fill the Phone No.
                  </div>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mt-3 mb-3">
                 <input type='submit' class="btn btn-warning w-100">
            </div>
        </form>
    </div>
</div>