<% layout('/layouts/boilerplate') %>


<div class="row offset-3">

    <div class="col-7 ">
        <h1>Add Student</h1>
        <form action="/students" method="post" novalidate class="needs-validation">
            <div class="mt-3">
                  <label for="rollNo" class="form-label">Roll No</label>
                  <input type="text" id="rollNo" name="rollNo" class="form-control" required>
                  <div class="invalid-feedback">
                    Please Fill the Roll No.
                  </div>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
            
            </div>


            <div class="mt-3">

                <label for="firstName" class="form-label">First Name</label>
                <input type="text" id="firstName" name="firstName" class="form-control" required>
                <div class="invalid-feedback">
                    Please Fill the First Name.
                  </div>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>


            <div class="mt-3">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" id="lastName" name="lastName" class="form-control" required>
                <div class="invalid-feedback">
                    Please Fill the Last Name.
                  </div>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>


            <div class="mt-3">
                <label for="fatherName" class="form-label">Fathers Name</label>
                <input type="text" id="fatherName" name="fathersName" class="form-control" required>
                <div class="invalid-feedback">
                    Please Fill the Fathers Name.
                  </div>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>


            <div class="mt-3">
                <label for="adharcardNo class="form-label">Adharcard No</label>
                <input type="text" id="adharcardNo" name="adharcardNo" class="form-control" required>
                <div class="invalid-feedback">
                    Please Fill the Adharcard No.
                  </div>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>


            <div class="mt-3">
                <label for="phoneNo" class="form-label">Phone Number</label>
                <input type="text" id="phoneNo" name="phoneNo" class="form-control" required>
                <div class="invalid-feedback">
                    Please Fill the Phone No.
                  </div>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mt-3 mb-3">
                 <input type='submit' class="btn btn-warning w-100">
            </div>
        </form>
    </div>
</div>